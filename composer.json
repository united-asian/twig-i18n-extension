{
    "name": "uam/twig-i18n-extension",
    "description": "Twig i18n extension",
    "keywords": ["twig", "i18n"],
    "homepage": "https://github.com/united-asian/twig-i18n-extension",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Olivier Pichon",
            "email": "op@united-asian.com"
        }
    ],
    "require": {
        "twig/twig": "^1.24",
        "symfony/intl": "^3.1",
        "symfony/translation": "~3.0"
    },
    "require-dev": {
    	"fzaninotto/faker": "^1.5",
        "phpunit/phpunit": "^4.6 || ^5.4"
    },
    "autoload": {
        "psr-4": {
            "UAM\\Twig\\Extension\\I18n\\": "src/",
            "UAM\\Twig\\Extension\\I18n\\Test\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    }
}
